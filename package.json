{
  "name": "telegram-ai-bot",
  "version": "1.0.0",
  "description": "Telegram group chat AI bot with message summarization and image generation",
  "main": "index.js",
  "scripts": {
    "dev": "netlify dev",
    "build": "tsc && npm run validate",
    "deploy": "netlify deploy --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "prepare": "npm run build",
    "clean": "rm -rf dist/ .netlify/ node_modules/.cache/",
    "validate:env": "node scripts/validate-env.js",
    "check:deps": "node scripts/check-dependencies.js",
    "check:deploy": "node scripts/deploy-check.js",
    "precheck": "npm run validate:env && npm run check:deps",
    "setup:webhook": "echo 'Run: curl -X POST \"https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/setWebhook\" -H \"Content-Type: application/json\" -d \\'{\\'url\\': \\'https://your-site.netlify.app/.netlify/functions/webhook\\', \\'secret_token\\': \\'${TELEGRAM_SECRET_TOKEN}\\'}\\''",
    "health:check": "curl -f https://your-site.netlify.app/.netlify/functions/webhook || exit 1"
  },
  "keywords": [
    "telegram",
    "bot",
    "ai",
    "llm",
    "openai",
    "claude",
    "netlify",
    "supabase",
    "grammY"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.25.0",
    "@google/generative-ai": "^0.15.0",
    "@supabase/supabase-js": "^2.44.0",
    "axios": "^1.7.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.0",
    "form-data": "^4.0.0",
    "grammy": "^1.25.0",
    "node-cron": "^3.0.3",
    "openai": "^4.57.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@netlify/functions": "^2.8.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
