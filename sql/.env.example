# =============================================================================
# Telegram Bot Database Configuration
# Copy this file to .env and update with your actual values
# =============================================================================

# Supabase Database Configuration
# Get these values from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Direct Database Connection (for migrations and admin tasks)
# Use these for direct PostgreSQL connections
DB_HOST=db.your-project-id.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-database-password

# Bot Service Database User (recommended for production)
# Create a dedicated user for the bot application
BOT_SERVICE_DB_USER=bot_service_user
BOT_SERVICE_DB_PASSWORD=your-bot-service-password
BOT_SERVICE_DATABASE_URL=postgresql://bot_service_user:your-bot-service-password@db.your-project-id.supabase.co:5432/postgres

# Analytics Database User (read-only access)
ANALYTICS_DB_USER=analytics_user
ANALYTICS_DB_PASSWORD=your-analytics-password
ANALYTICS_DATABASE_URL=postgresql://analytics_user:your-analytics-password@db.your-project-id.supabase.co:5432/postgres

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather

# LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key
CLAUDE_API_KEY=your-claude-api-key

# Image Generation APIs
DALLE_API_KEY=your-dalle-api-key
MIDJOURNEY_API_KEY=your-midjourney-api-key
STABLE_DIFFUSION_API_KEY=your-stable-diffusion-key

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Webhook Configuration
WEBHOOK_URL=https://your-app.netlify.app/.netlify/functions/webhook
WEBHOOK_SECRET=your-webhook-secret-for-security

# Rate Limiting and Security
MAX_REQUESTS_PER_MINUTE=60
MAX_IMAGES_PER_USER_PER_HOUR=5
MAX_SUMMARIES_PER_CHAT_PER_HOUR=10

# Feature Flags
ENABLE_IMAGE_GENERATION=true
ENABLE_AUTO_SUMMARY=true
ENABLE_CONTENT_FILTER=true
ENABLE_NSFW_FILTER=true

# Cost Management
MAX_DAILY_API_COST_USD=10.00
WARN_AT_COST_USD=8.00

# Monitoring and Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_USAGE_ANALYTICS=true

# Backup and Maintenance
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
AUTO_CLEANUP_ENABLED=true

# Development Settings (only for development)
ENABLE_DEBUG_LOGGING=false
SKIP_RLS_IN_DEV=false
LOAD_SAMPLE_DATA=true