# =============================================================================
# ENVIRONMENT VARIABLES - Telegram AI Bot with Image Edit Feature
# =============================================================================

# -----------------------------------------------------------------------------
# CORE SERVICES
# -----------------------------------------------------------------------------
# Telegram Bot
BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token # Alternative naming

# AI APIs
CLAUDE_API_KEY=your_claude_api_key
GOOGLE_API_KEY=your_google_api_key

# Database (Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key # This is SUPABASE_ANON_KEY
SUPABASE_ANON_KEY=your_supabase_anon_key # More explicit naming

# -----------------------------------------------------------------------------
# IMAGE EDITING SERVICE
# -----------------------------------------------------------------------------
# Nano Banafo API (Required for image editing feature)
NANO_BANAFO_API_KEY=your_nano_banafo_api_key_here
NANO_BANAFO_API_URL=https://api.nanobanafo.com/v1

# -----------------------------------------------------------------------------
# DEPLOYMENT SETTINGS
# -----------------------------------------------------------------------------
# Render will automatically set these:
# PORT=10000
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# Optional deployment keys
RENDER_API_KEY=your_render_api_key # Optional, for automation

# -----------------------------------------------------------------------------
# FEATURE CONFIGURATION
# -----------------------------------------------------------------------------
# Image Editing Settings
MAX_IMAGE_SIZE_MB=20
MAX_IMAGES_PER_EDIT=5
IMAGE_EDIT_TIMEOUT=30000

# Feature Flags
ENABLE_IMAGE_EDITING=true
ENABLE_MOCK_MODE=false # Set to true for testing without API calls

# Rate Limiting
MAX_EDITS_PER_USER_PER_DAY=50

# -----------------------------------------------------------------------------
# OPTIONAL SERVICES
# -----------------------------------------------------------------------------
# Redis for caching (optional)
REDIS_URL=redis://localhost:6379

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# -----------------------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------------------
NODE_ENV=production # development, staging, production
LOG_LEVEL=info # debug, info, warn, error